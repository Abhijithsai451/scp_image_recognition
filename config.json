{
  "name": "scp_image_recognition",
  "n_gpu": 1,
  "arch": {
    "type": "ImageClassificationModel",
    "args": {}
  },
  "data_loader": {
    "type": "ImageDataLoader",
    "args": {
      "data_dir": "data/input_dataset",
      "aug_dir": "data/aug_dataset",
      "batch_size": 128,
      "shuffle": true,
      "validation_split": 0.1,
      "num_aug_images": 1,
      "num_workers": 2
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 0.001,
      "weight_decay": 0,
      "amsgrad": true
    }
  },
  "loss": "nll_loss",
  "metrics": [
    "accuracy",
    "top_k_acc"
  ],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 50,
      "gamma": 0.1
    }
  },
  "trainer": {
    "epochs": 3,
    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 10,
    "tensorboard": true
  }
}
